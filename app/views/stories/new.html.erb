<div class="new-content">
  <h1>New Story</h1>

  <img class="storyImage" src=<%=@random_img%>>
</div>
<div class="card new-form">
  <%= form_for @story do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.hidden_field :imgLink, :value => @random_img%>
  <%= f.submit class: "waves-effect waves-light btn-small btn-form"%>
  <% end %>
</div>
