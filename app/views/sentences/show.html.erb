<div class="row">
  <div class="col s8">
    <%= render "shared/story" %>
  </div>
  <div id="sidebar" class="col s4">
    <h3><%= @sentence.words %></h3>
    <h5><%= @sentence.user.username%></h5>
    <ul>
      <% @comments.each do |comment| %>
        <li><%= comment.words %></li>
        <li><%= comment.user.username %></li>
      <% end %>
    </ul>

    <%= form_for [@sentence, @new_comment] do |f| %>
      <%= f.label "New Comment:" %>
      <%= f.text_field :words %>
      <%= f.label "User Key:" %>
      <%= f.text_field :user_id %>
      <p><%= f.submit %></p>
    <% end %>
  </div>
</div>
